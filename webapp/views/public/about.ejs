<script>
    $.ajax({
        type: "GET",
        url: '../totalCnt',
        success: function (data) {
//            $("#count").text(data.count);
            var totalCnt = data.count;
            var comma_separator_number_step = $.animateNumber.numberStepFactories.separator(',')
            $('#count').animateNumber(
                    {
                        number: totalCnt,
                        numberStep: comma_separator_number_step
                    },
                    3000
            );
        }
    });

</script>

